{% extends 'base.html.twig' %}

{% block title %}Liste des Baies{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>üì¶ Gestion des Baies</h1>
    
    <div class="card mt-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Liste des baies du datacenter</h5>
        </div>
        <div class="card-body">
            {% if baies is empty %}
                <div class="alert alert-info">
                    Aucune baie dans la base de donn√©es.
                    <a href="#" class="alert-link">Cr√©er des fixtures</a>
                </div>
            {% else %}
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Num√©ro</th>
                                <th>Capacit√© totale</th>
                                <th>Unit√©s disponibles</th>
                                <th>Taux d'occupation</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for baie in baies %}
                                {% set unitesOccupees = baie.unites|filter(u => u.statut == 'occupe')|length %}
                                {% set unitesLibres = baie.capaciteTotale - unitesOccupees %}
                                {% set tauxOccupation = (unitesOccupees / baie.capaciteTotale * 100)|round %}
                                
                                <tr>
                                    <td>
                                        <strong>{{ baie.numero }}</strong>
                                    </td>
                                    <td>{{ baie.capaciteTotale }} unit√©s</td>
                                    <td>
                                        <span class="badge bg-success">{{ unitesLibres }} libres</span>
                                        <span class="badge bg-danger">{{ unitesOccupees }} occup√©es</span>
                                    </td>
                                    <td>
                                        <div class="progress" style="height: 25px;">
                                            <div class="progress-bar 
                                                {% if tauxOccupation < 50 %}bg-success
                                                {% elseif tauxOccupation < 80 %}bg-warning
                                                {% else %}bg-danger{% endif %}"
                                                role="progressbar"
                                                style="width: {{ tauxOccupation }}%;"
                                                aria-valuenow="{{ tauxOccupation }}"
                                                aria-valuemin="0"
                                                aria-valuemax="100">
                                                {{ tauxOccupation }}%
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <a href="{{ path('app_baie_show', {id: baie.id}) }}" 
                                           class="btn btn-sm btn-primary">
                                            üëÅÔ∏è D√©tails
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                
                <div class="mt-3">
                    <strong>Total : {{ baies|length }} baies</strong>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}