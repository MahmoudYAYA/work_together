{% extends 'base.html.twig' %}

{% block title %}Changer le mot de passe - WorkTogether{% endblock %}

{% block body %}
<div class="container mt-5 mb-5">
    <!-- ========== EN-TÊTE ========== -->
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="display-5 fw-bold">
                <i class="bi bi-key"></i> Changer le mot de passe
            </h1>
            <p class="text-muted">Mettez à jour votre mot de passe pour sécuriser votre compte</p>
        </div>
        <div class="col-md-4 text-end">
            <a href="{{ path('user_profile') }}" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Retour au profil
            </a>
        </div>
    </div>

    <!-- ========== MESSAGES FLASH ========== -->
    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle"></i> {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    <!-- ========== FORMULAIRE CHANGEMENT MOT DE PASSE ========== -->
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-shield-lock"></i> Nouveau mot de passe
                    </h5>
                </div>
                <div class="card-body">
                    <form method="POST" action="{{ path('user_change_password_submit') }}">
                        <!-- Mot de passe actuel -->
                        <div class="mb-3">
                            <label for="current_password" class="form-label">
                                <i class="bi bi-lock"></i> Mot de passe actuel
                            </label>
                            <div class="input-group">
                                <input 
                                    type="password" 
                                    class="form-control" 
                                    id="current_password" 
                                    name="current_password"
                                    required
                                    placeholder="Entrez votre mot de passe actuel"
                                >
                                <button 
                                    class="btn btn-outline-secondary" 
                                    type="button" 
                                    onclick="togglePassword('current_password')"
                                >
                                    <i class="bi bi-eye"></i>
                                </button>
                            </div>
                            <small class="form-text text-muted">
                                Pour des raisons de sécurité, vous devez confirmer votre mot de passe actuel
                            </small>
                        </div>

                        <!-- Nouveau mot de passe -->
                        <div class="mb-3">
                            <label for="new_password" class="form-label">
                                <i class="bi bi-key"></i> Nouveau mot de passe
                            </label>
                            <div class="input-group">
                                <input 
                                    type="password" 
                                    class="form-control" 
                                    id="new_password" 
                                    name="new_password"
                                    required
                                    minlength="8"
                                    placeholder="Entrez un nouveau mot de passe (min. 8 caractères)"
                                    oninput="checkPasswordStrength()"
                                >
                                <button 
                                    class="btn btn-outline-secondary" 
                                    type="button" 
                                    onclick="togglePassword('new_password')"
                                >
                                    <i class="bi bi-eye"></i>
                                </button>
                            </div>
                            <small class="form-text text-muted">
                                Au moins 8 caractères
                            </small>
                            <!-- Indicateur de force -->
                            <div id="strength-meter" class="mt-2" style="display: none;">
                                <div class="progress">
                                    <div id="strength-bar" class="progress-bar bg-danger" style="width: 0%"></div>
                                </div>
                                <small id="strength-text" class="form-text text-muted">Faible</small>
                            </div>
                        </div>

                        <!-- Confirmation mot de passe -->
                        <div class="mb-3">
                            <label for="confirm_password" class="form-label">
                                <i class="bi bi-key"></i> Confirmer le nouveau mot de passe
                            </label>
                            <div class="input-group">
                                <input 
                                    type="password" 
                                    class="form-control" 
                                    id="confirm_password" 
                                    name="confirm_password"
                                    required
                                    placeholder="Confirmez votre nouveau mot de passe"
                                >
                                <button 
                                    class="btn btn-outline-secondary" 
                                    type="button" 
                                    onclick="togglePassword('confirm_password')"
                                >
                                    <i class="bi bi-eye"></i>
                                </button>
                            </div>
                            <small class="form-text text-muted" id="match-message"></small>
                        </div>

                        <!-- Conditions de sécurité -->
                        <div class="alert alert-info" role="alert">
                            <h6 class="alert-heading">
                                <i class="bi bi-info-circle"></i> Conseils de sécurité
                            </h6>
                            <ul class="small mb-0">
                                <li>✓ Au moins 8 caractères</li>
                                <li>✓ Mélangez majuscules, minuscules, chiffres et symboles</li>
                                <li>✓ Évitez d'utiliser des informations personnelles</li>
                                <li>✓ Utilisez un mot de passe unique pour chaque compte</li>
                            </ul>
                        </div>

                        <!-- Boutons d'action -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a href="{{ path('user_profile') }}" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle"></i> Annuler
                            </a>
                            <button type="submit" class="btn btn-primary" id="submit-btn" disabled>
                                <i class="bi bi-check-circle"></i> Changer le mot de passe
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- ========== JAVASCRIPT ========== -->
