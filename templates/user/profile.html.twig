{% extends 'base.html.twig' %}

{% block title %}Profil - WorkTogether{% endblock %}

{% block body %}
<div class="container mt-5 mb-5">
    <!-- ========== EN-TÊTE ========== -->
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="display-5 fw-bold">
                <i class="bi bi-person-check"></i> Mon profil
            </h1>
            <p class="text-muted">Gérez vos informations personnelles</p>
        </div>
        <div class="col-md-4 text-end">
            <a href="{{ path('user_dashboard') }}" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Retour au tableau de bord
            </a>
        </div>
    </div>

    <!-- ========== MESSAGES FLASH ========== -->
    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle"></i> {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    <!-- ========== FORMULAIRE DE PROFIL ========== -->
    <div class="row">
        <div class="col-md-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-pencil-square"></i> Informations personnelles
                    </h5>
                </div>
                <div class="card-body">
                    <form method="POST" action="{{ path('user_profile_update') }}">
                        <!-- Prénom -->
                        <div class="mb-3">
                            <label for="prenom" class="form-label">
                                <i class="bi bi-person"></i> Prénom
                            </label>
                            <input 
                                type="text" 
                                class="form-control" 
                                id="prenom" 
                                name="prenom"
                                value="{{ user.prenom }}"
                                placeholder="Jean"
                            >
                            <small class="form-text text-muted">Votre prénom</small>
                        </div>

                        <!-- Nom -->
                        <div class="mb-3">
                            <label for="nom" class="form-label">
                                <i class="bi bi-person-badge"></i> Nom
                            </label>
                            <input 
                                type="text" 
                                class="form-control" 
                                id="nom" 
                                name="nom"
                                value="{{ user.nom }}"
                                placeholder="Dupont"
                            >
                            <small class="form-text text-muted">Votre nom de famille</small>
                        </div>

                        <!-- Email (lecture seule) -->
                        <div class="mb-3">
                            <label for="email" class="form-label">
                                <i class="bi bi-envelope"></i> Email
                            </label>
                            <input 
                                type="email" 
                                class="form-control" 
                                id="email" 
                                value="{{ user.email }}"
                                disabled
                            >
                            <small class="form-text text-muted">Non modifiable</small>
                        </div>

                        <!-- Statut (lecture seule) -->
                        <div class="mb-3">
                            <label for="statut" class="form-label">
                                <i class="bi bi-info-circle"></i> Statut
                            </label>
                            <input 
                                type="text" 
                                class="form-control" 
                                id="statut"
                                value="{% if user.actif %}Actif{% else %}Désactivé{% endif %}"
                                disabled
                            >
                            <small class="form-text text-muted">Géré par l'administrateur</small>
                        </div>

                        <!-- Boutons d'action -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <button type="reset" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-clockwise"></i> Réinitialiser
                            </button>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Enregistrer les modifications
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- ========== SIDEBAR DROITE ========== -->
        <div class="col-md-4">
            <!-- Infos du compte -->
            <div class="card border-0 shadow-sm mb-3">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-shield-check"></i> Sécurité
                    </h5>
                </div>
                <div class="card-body">
                    <p class="card-text small">
                        Changez votre mot de passe régulièrement pour sécuriser votre compte.
                    </p>
                    <a href="{{ path('user_change_password') }}" class="btn btn-sm btn-warning w-100">
                        <i class="bi bi-key"></i> Changer le mot de passe
                    </a>
                </div>
            </div>

            <!-- Données du compte -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-clock-history"></i> Historique
                    </h5>
                </div>
                <div class="card-body">
                    <p class="small text-muted mb-2">
                        <strong>Créé le :</strong><br>
                        {{ user.dateCreation|date('d/m/Y à H:i') }}
                    </p>
                    <p class="small text-muted">
                        <strong>Modifié le :</strong><br>
                        {{ user.dateModification|date('d/m/Y à H:i') }}
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}